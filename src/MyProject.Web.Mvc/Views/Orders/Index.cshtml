@using MyProject.Web.Startup

@{
	ViewBag.Title = L("Orders");
	ViewBag.CurrentPageName = PageNames.Orders;
}

@section scripts
{
	<environment names="Development">
		<script src="~/view-resources/Views/Orders/Index.js" asp-append-version="true"></script>
	</environment>

@* 	<environment names="Staging,Production">
		<script src="~/view-resources/Views/Orders/Index.min.js" asp-append-version="true"></script>
	</environment> *@
}


<section class="content-header">
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-6">
				<h1>@L("Orders")</h1>
			</div>
		</div>
	</div>
</section>
<section class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-12">
				@await Html.PartialAsync("~/Views/Orders/Search.cshtml")
				<div class="card">
					<div class="card-header">
						<div class="row">
							<div class="col-md-6">
							</div>
						</div>
					</div>
					<div class="card-body">
						<div class="table-responsive">
							<table id="OrdersTable" class="table table-striped table-bordered">
								<thead>
									<tr>
										<th style="width: 90px">@L("NameUser")</th>
										<th style="width: 200px">@L("TotalAmount")</th>
										<th style="width: 120px">@L("DiscountAmount")</th>
										<th style="width: 170px">@L("PaymentMethod")</th>
										<th style="width: 120px">@L("CreationTime")</th>
										<th>@L("OrderStatus")</th>
										<th style="width: 230px">@L("Actions")</th>
									</tr>
								</thead>
								<tbody>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

