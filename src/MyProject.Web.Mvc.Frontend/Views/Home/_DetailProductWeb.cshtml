@using MyProject.Web.Models.Products
@model DetailProductModel


@section scripts
{
	<environment names="Development">
		<script src="~/view-resources/Views/Carts/Index.js" asp-append-version="true"></script>
	</environment>

	<environment names="Staging,Production">
		@* <script src="~/view-resources/Views/Carts/Index.min.js" asp-append-version="true"></script> *@
	</environment>
}


<style>
	.product-image .img-private {
		width: 100%;
		max-width: 500px;
		height: auto;
		display: block;
		margin: auto;
		transition: transform 0.5s;
	}

	.product-image .img-private:hover {
		transform: scale(1.05);
	}

	.rating span {
		color: gold;
		font-size: 20px;
	}
</style>

<div class="container mt-4">
	<div class="row">
		<div class="col-md-12">
			<!-- Breadcrumb -->
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb bg-light p-2 rounded">
					<li class="breadcrumb-item"><a href="/Home">Trang chủ</a></li>
					<li class="breadcrumb-item " aria-current="page">@Model.CategoryName</li>
				</ol>
			</nav>
		</div>
	</div>
	<!-- Tiêu đề -->
	<div class="d-flex align-items-center pb-2 rounded">
		<h3 class="text-primary fw-bold mb-0">@Model.Name</h3>
		<p class="text-secondary fw-semibold mb-0 ml-3">(Mã SP: <span class="text-danger">#123456</span>)</p>
	</div>

	<div class="row">
		<!-- Hình ảnh sản phẩm -->
		<div class="col-md-6">
			<div class="product-image text-center">
				<img src="@Model.Image" class="img-private img-fluid rounded shadow-sm" alt="@Model.Name">
			</div>
		</div>

		<!-- Thông tin sản phẩm -->
		<div class="col-md-6">
			<!-- Giá sản phẩm -->
			<h4 class="text-danger fw-bold">
				@String.Format("{0:N0}đ", Model.Price)
				<small class="text-muted text-decoration-line-through">(20.490.000đ)</small>
			</h4>
			<span class="badge bg-warning text-dark">Trả góp 0%</span>

			<!-- Khuyến mãi -->
			<div class="mt-3 p-3 border rounded bg-light">
				<h5 class="fw-bold text-primary">Khuyến mãi trị giá 3.290.000đ</h5>
				<p class="text-muted">Giá và khuyến mãi dự kiến áp dụng đến 23:59 | 31/03</p>
				<ul class="list-group">
					<li class="list-group-item">
						<strong>1.</strong> Chọn 1 trong các khuyến mãi:
						<div class="form-check">
							<input class="form-check-input" type="radio" name="promo" id="promo1">
							<label class="form-check-label" for="promo1">Giảm ngay 700.000đ</label>
						</div>
						<div class="form-check">
							<input class="form-check-input" type="radio" name="promo" id="promo2">
							<label class="form-check-label" for="promo2">Tặng Microsoft 365 Personal</label>
						</div>
					</li>
					<li class="list-group-item"><strong>2.</strong> Balo Acer Predator Gaming</li>
					<li class="list-group-item"><strong>3.</strong> Phiếu mua AirPods & Apple Watch (300.000đ)</li>
					<li class="list-group-item"><strong>4.</strong> Phiếu mua Xiaomi Watch S3 (700.000đ)</li>
				</ul>
			</div>

			<!-- Số lượng -->
			<div class="mt-3">
				<label class="fw-bold">Số lượng:</label>
				<input id="quantity-add-detail" type="number" class=" form-control w-25 d-inline-block" value="1" min="1">
			</div>

			<!-- Nút mua hàng -->
			<div class="mt-3 d-flex gap-5 ">
				<button data-Id="@Model.Id" class="btn btn-primary flex-grow-1 mr-3 btn-add-detail"><i class="fa fa-shopping-cart pr-1"></i>Thêm vào giỏ hàng</button>
				<button class="btn btn-success flex-grow-1">Mua ngay</button>
			</div>
		</div>

	</div>

	<!-- Thông số kỹ thuật -->
	<div class="mt-5">
		<h4 class="fw-bold">Thông số kỹ thuật</h4>
		<ul>
			<li>CPU: Snapdragon 8 Gen 2</li>
			<li>RAM: 8GB</li>
			<li>Bộ nhớ: 256GB</li>
			<li>Pin: 3700mAh</li>
		</ul>
	</div>

	<!-- Đánh giá khách hàng -->
	<div class="mt-5">
		<h4 class="fw-bold">Đánh giá sản phẩm</h4>
		<div class="rating">
			<span>&#9733;&#9733;&#9733;&#9733;&#9734;</span> (4.0/5)
		</div>
		<textarea class="form-control mt-2" placeholder="Nhập đánh giá của bạn..."></textarea>
		<button class="btn btn-success mt-2">Gửi đánh giá</button>
	</div>

	<!-- Sản phẩm liên quan -->
	<div class="mt-5">
		<h4 class="fw-bold">Sản phẩm liên quan</h4>
		<div class="d-flex">
			<div class="card mx-2" style="width: 18rem;">
				<img src="/img/Products/20250220172828_f23ffce29cda48ac99decdc32b1fd1d3.jpg" class="card-img-top" alt="">
				<div class="card-body">
					<h5 class="card-title">Sản phẩm A</h5>
					<p class="text-danger">3.500.000đ</p>
				</div>
			</div>
			<div class="card mx-2" style="width: 18rem;">
				<img src="/img/Products/20250220220201_45a375af7ba34763980096c505d1d20e.jpg" class="card-img-top" alt="">
				<div class="card-body">
					<h5 class="card-title">Sản phẩm B</h5>
					<p class="text-danger">2.900.000đ</p>
				</div>
			</div>
		</div>
	</div>
</div>
