@using static MyProject.Categories.Category

<div class="card shadow-lg p-4">
  <h3 class="text-primary mb-3">@L("CategoryDetails")</h3>

  <div class="row mb-3">
    <label class="col-md-3 fw-bold">@L("CategoryName"):</label>
    <div class="col-md-9">
      <p id="detail-name" class="form-control-plaintext">@Model.Category.CategoryName</p>
    </div>
  </div>

  <div class="row mb-3">
    <label class="col-md-3 fw-bold">@L("CategoryDescription"):</label>
    <div class="col-md-9">
      <p id="detail-description" class="form-control-plaintext">@Model.Category.CategoryDescription</p>
    </div>
  </div>


  <div class="text-end">
    <button id="back-button" class="btn btn-secondary">
      <i class="bi bi-arrow-left"></i> @L("Back")
    </button>
  </div>
</div>

<script>
  document.getElementById("back-button").addEventListener("click", function() {
    window.history.back();
  });
</script>
