@using MyProject.Web.Views.Shared.Components.HeaderMenu
@model HeaderMenuViewModel
@*  <div class="image">
    <img src="~/libs/admin-lte/dist/img/avatar5.png" class="img-circle elevation-2" alt="User Image">
  </div> *@
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

@if (Model.LoginInformations.User == null)
{
	<div class="d-flex">
    <a class="nav-link" href="/Account/Register">
      <i class="fas fa-user-plus "></i> Đăng ký
    </a>

    <a class="nav-link" href="/Account/Login">
      <i class="fas fa-sign-in-alt "></i> Đăng nhập
    </a>
  </div>

}
else
{
  <div class="d-flex align-items-center dropdown">
    <img src="~/libs/admin-lte/dist/img/avatar5.png" style="width: 35px; height:35px" class="img-circle elevation-2 mr-2" alt="User Image">
    <a class="text-white dropdown-toggle" href="#" role="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
      @Html.Raw(Model.GetShownLoginName())
    </a>
    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
      <li><a class="dropdown-item" href="/Account/Profile"><i class="fas fa-user me-2"></i>Thông tin tài khoản</a></li>
      <li><a class="dropdown-item text-danger" href="/Account/Logout"><i class="fas fa-sign-out-alt me-2"></i>Đăng xuất</a></li>
    </ul>
  </div>

}



