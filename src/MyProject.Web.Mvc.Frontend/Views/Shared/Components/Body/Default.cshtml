@using MyProject.Web.Views.Shared.Components.Body
@model BodyViewModel

<script src="/view-resources/Views/Home/Page.js"></script>

<h2 class="text-center text-primary">✨ Sản phẩm nổi bật ✨</h2>

<!-- Vùng chứa sản phẩm -->
<div class="product-container position-relative">
	<!-- Nút mũi tên trái -->
	<button class="scroll-btn left-btn">&lt;</button>

	<!-- Danh sách sản phẩm -->
	<div class="product-list d-flex flex-nowrap overflow-hidden">
		@foreach (var product in Model.Products)
		{
			<div class="product-card card p-2 d-flex flex-column align-items-center text-center shadow-sm">
				<img src="@product.Image" class="card-img-top" alt="@product.Name">
				<div class="card-body d-flex flex-column">
					<h6 class="card-title text-truncate">@product.Name</h6>
					<p class="text-danger fw-bold mb-2">Giá: @String.Format("{0:N0} đ", product.Price)</p>
					<a href="#" class="btn btn-sm btn-primary mt-auto btn-view-detail"
						 data-id="@product.Id"
						 data-name="@product.Name"
						 data-price="@product.Price"
						 data-description="@product.Description"
						 data-state="@product.State"
						 data-image="@product.Image">
						Chi tiết
					</a>
				</div>
			</div>
		}
	</div>

	<!-- Nút mũi tên phải -->
	<button class="scroll-btn right-btn">&gt;</button>
</div>

