<style>
	.product-container {
		position: relative;
		width: 100%;
		overflow: hidden;
	}

	.product-list {
		display: flex;
		gap: 10px;
		transition: transform 0.3s ease-in-out;
	}

	.product-card {
		flex: 0 0 auto;
		width: 180px;
		height: 300px;
		border-radius: 10px;
		overflow: hidden;
	}

	.scroll-btn {
		position: absolute;
		top: 50%;
		transform: translateY(-50%);
		background-color: rgba(0, 0, 0, 0.6);
		color: white;
		border: none;
		padding: 10px 15px;
